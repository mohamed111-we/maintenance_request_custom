<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_maintenance_report_template">
            <t t-call="web.html_container">
                <t t-set="rtl" t-value="docs and docs[0].env.lang and docs[0].env.lang.startswith('ar')"/>
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page" t-att-style="'direction: %s;' % ('rtl' if rtl else 'ltr')">

                            <div style="display: flex; direction: ltr; margin-bottom: 20px;">
                                <div style="flex: 0 0 auto; margin-right: 20px;">
                                    <img t-att-src="image_data_uri(doc.company_id.logo)" style="height: 80px;"/>
                                </div>
                                <div style="flex: 1; direction: rtl;">
                                    <h2 style="font-size: 20pt; color: #2E86C1; margin: 0 0 5px 0; text-align: right;">
                                        <t t-esc="doc.company_id.name or company.name"/>
                                    </h2>
                                </div>
                            </div>

                            <div style="text-align: center; margin-top: 20px; margin-bottom: 20px;">
                                <p style="font-size: 26px; font-weight: bold;">
                                    M/C Preventive Maintenance Order
                                </p>
                            </div>

                            <div style="display: flex; justify-content: space-between; font-size: 20px; font-weight: bold; margin-top: 20px;">
                                <div style="text-align: right; padding: 0; margin: 0; flex: 0 0 auto;">
                                    <p style="margin: 4px 0;">
                                        <strong>Machine Name:</strong>
                                        <span>
                                            <t t-esc="doc.equipment_id.name"/>
                                        </span>
                                    </p>
                                    <p style="margin: 4px 0;">
                                        <strong>Order Date:</strong>
                                        <span>
                                            <t t-esc="doc.request_date"/>
                                        </span>
                                    </p>
                                </div>
                                <div style="text-align: left; padding: 0; margin: 0; flex: 0 0 auto;">
                                    <p style="margin: 4px 0;">
                                        <strong>Coding number:</strong>
                                        <span>
                                            <t t-esc="doc.equipment_id.item_code"/>
                                        </span>
                                    </p>
                                    <p style="margin: 4px 0;">
                                        <strong>Maintenance Type:</strong>
                                        <span>
                                            <t t-esc="dict(doc._fields['maintenance_type'].selection).get(doc.maintenance_type)"/>
                                        </span>
                                    </p>
                                </div>
                            </div>

                            <h3 style="font-size: 22px; margin-top: 40px; margin-bottom: 15px; text-align: center;">
                                Maintenance Instructions
                            </h3>
                            <table class="table table-bordered"
                                   style="width: 100%; border-collapse: collapse; margin-top: 30px; border: 3px solid #2E86C1; font-size: 18px;">
                                <thead style="background-color: #f2f2f2; border-bottom: 2px solid #ddd;">
                                    <tr>
                                        <th style="padding: 10px; text-align: center;">Instruction</th>
                                        <th style="padding: 10px; text-align: center;">Done</th>
                                        <th style="padding: 10px; text-align: center;">Not Done</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.maintenance_instructions_request_ids" t-as="instruction">
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <t t-esc="instruction.name"/>
                                        </td>
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <span t-if="instruction.done">✔️</span>
                                        </td>
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <span t-if="not instruction.done">❌</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="text-align: center; margin-top: 15px;"
                                 t-if="not doc.maintenance_instructions_request_ids">
                                <p>No instructions available for this equipment.</p>
                            </div>

                            <h3 style="font-size: 22px; margin-top: 40px; margin-bottom: 15px; text-align: center;">
                                Technician Work Log
                            </h3>
                            <table class="table table-bordered"
                                   style="width: 100%; border-collapse: collapse; margin-top: 30px; border: 3px solid #2E86C1; font-size: 18px;">
                                <thead style="background-color: #f2f2f2;">
                                    <tr>
                                        <th style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 20px;">
                                            Maintenance Technician
                                        </th>
                                        <th style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 20px;">
                                            Number of working hours
                                        </th>
                                        <th style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 20px;">
                                            M/C notes
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.line_ids" t-as="line">
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <t t-esc="line.technician"/>
                                        </td>
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <t t-esc="line.work_hours"/>
                                        </td>
                                        <td style="border: 2px solid #000; padding: 12px; text-align: center; font-size: 18px;">
                                            <t t-esc="line.mc_notes"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div style="display: flex; justify-content: space-between; font-size: 20px; font-weight: bold; margin-top: 20px;">
                                <div style="text-align: right; padding: 0; margin: 0; flex: 0 0 auto;">
                                    <p style="margin: 4px 0;">
                                        <strong>Finishing Date:</strong>
                                        <span>
                                            <t t-esc="doc.close_date"/>
                                        </span>
                                    </p>
                                    <p style="margin: 4px 0;">
                                        <strong>Supervisor:</strong>
                                        <span>
                                            <t t-esc="doc.department_id.name"/>
                                        </span>
                                    </p>
                                </div>
                                <div style="text-align: left; padding: 0; margin: 0; flex: 0 0 auto;">
                                    <p style="margin: 4px 0;">
                                        <strong>Maintenance Department manager:</strong>
                                        <span>
                                            <t t-esc="doc.department_id.manager_id.name"/>
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <record id="report_maintenance_request_report" model="ir.actions.report">
            <field name="name">Preventive Maintenance Report</field>
            <field name="model">maintenance.request</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">maintenance_request_custom.report_maintenance_report_template</field>
            <field name="report_file">maintenance_request_custom.report_maintenance_report_template</field>
            <field name="print_report_name">'Preventive Maintenance Report'</field>
            <field name="binding_model_id" ref="maintenance.model_maintenance_request"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>